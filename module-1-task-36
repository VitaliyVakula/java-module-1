function checkForSpam(message) {
  let result;
  // Пиши код ниже этой строки
  
  if (message.toLowerCase().includes('spam') || message.toLowerCase().includes('sale')) {
    result = true;  
  } else { 
    result = false;
  }
   // Пиши код выше этой строки
  return result;
}

console.log (checkForSpam('Amazing SalE, only tonight!'))